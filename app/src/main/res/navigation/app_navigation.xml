<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.navigationcomponentbanktransaction.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
    <fragment
        android:id="@+id/viewTransactionFragment"
        android:name="com.example.navigationcomponentbanktransaction.ViewTransactionFragment"
        android:label="fragment_view_transaction"
        tools:layout="@layout/fragment_view_transaction" />
    <fragment
        android:id="@+id/chooseRecipientFragment"
        android:name="com.example.navigationcomponentbanktransaction.ChooseRecipientFragment"
        android:label="fragment_choose_recipient"
        tools:layout="@layout/fragment_choose_recipient" />
    <fragment
        android:id="@+id/viewBalanceFragment"
        android:name="com.example.navigationcomponentbanktransaction.ViewBalanceFragment"
        android:label="fragment_view_balance"
        tools:layout="@layout/fragment_view_balance" />
    <fragment
        android:id="@+id/specifyAmountFragment"
        android:name="com.example.navigationcomponentbanktransaction.SpecifyAmountFragment"
        android:label="fragment_specific_amount"
        tools:layout="@layout/fragment_specific_amount" />
    <fragment
        android:id="@+id/confirmationFragment"
        android:name="com.example.navigationcomponentbanktransaction.ConfirmationFragment"
        android:label="fragment_confirmation"
        tools:layout="@layout/fragment_confirmation" />
</navigation>